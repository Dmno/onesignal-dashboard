<div id="linkChangerModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true" class="modal fade text-left">
    <div role="document" class="modal-dialog" style="max-width: 600px!important;min-height: 360px!important;">
        <div class="modal-content">
            <div class="modal-header">
                <h4 id="linkChangerModalTitle" class="modal-title">Change all notification domains</h4>
                <button type="button" data-dismiss="modal" aria-label="Close" class="close link-changer-modal-close"><span aria-hidden="true">Ã—</span></button>
            </div>
            <div class="modal-body">

                <form id="link-changer-form">
                    <label for="link-changer-from" class="required" style="font-size: 20px;">From</label>
                    <input type="text" class="form-control url-validation" id="from" name="linkFrom" required="required" placeholder="https://ltitrk.com">
                    <small id="link_changer_from_help" class="form-text text-muted">Insert a domain to change from (https://ltitrk.com)</small>
                    <div class="link-changer-url-error-from alert alert-warning" style="display: none"><i class="fa fa-exclamation-triangle"></i> This is not a valid url</div>
                    <i id="url-status-from" style="display: none">false</i>

                    <label for="link-changer-to" class="required" style="font-size: 20px;">To</label>
                    <input type="text" class="form-control url-validation" id="to" name="linkTo" required="required" placeholder="https://domain.com">
                    <small id="link_changer_to_help" class="form-text text-muted">Insert a domain to change to (https://domain.com)</small>
                    <div class="link-changer-url-error-to alert alert-warning" style="display: none"><i class="fa fa-exclamation-triangle"></i> This is not a valid url</div>
                    <i id="url-status-to" style="display: none">false</i>
                </form>

                <button class="btn btn-block btn-success mt-3" id="link-changer-submit" type="submit" disabled>Change domains</button>

                <div class="changer-loading-div overlay text-center" style="display: none">
                    <div class="changer-inner-loading-div">
                        <div class="changer-loading-title-block">
                            <span class="changer-title-text"></span>
                        </div>

                        <div class="changer-loading-element-block">
                            <span class="fa fa-check" id="changer-finished-check" style="color: green;display: none;font-size:40px;padding-top:3%;"></span>
                            <span class="fa fa-exclamation-triangle fa-2x" id="changer-failed-check" style="color: orangered;padding:5%;display: none;"></span>

                            <div class="changer-loading-bar" style="padding: 5%;">
                                <div class="lds-ellipsis"><div></div><div></div><div></div><div></div></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>