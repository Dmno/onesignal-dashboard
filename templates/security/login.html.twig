{% extends 'security/base.html.twig' %}

{% block title %}Sign in{% endblock %}

{% block body %}
<form method="post" style=" width: 400px; margin: auto;">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.username }}, go to the <a href="{{ path('app_logout') }}">Main page</a> or <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}

    <h1 class="h3 mb-3 font-weight-normal">Sign in</h1>
    <label for="inputUsername">Username</label>
    <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control" required autofocus autocomplete="off">
    <label for="inputPassword">Password</label>
    <input type="password" name="password" id="inputPassword" class="form-control" required>

    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
    <button class="btn btn-primary btn-block mt-4 mb-3" type="submit">
        Sign in
    </button>

    <div>Don't have an account? <a href="{{ path('app_register') }}">Register</a></div>
</form>
{% endblock %}
