{% include 'main/images/image_select.html.twig' %}

<div id="utilityModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true" class="modal fade text-left">
    <div role="document" class="modal-dialog" style="max-width: 600px!important;">
        <div class="modal-content">
            <div class="modal-header">
                <h4 id="utilityModalTitle" class="modal-title">Loading..</h4>
                <button type="button" data-dismiss="modal" aria-label="Close" class="close utility-modal-close"><span aria-hidden="true">Ã—</span></button>
            </div>
            <div class="modal-body">
                <i class="fa fa-spinner fa-pulse text-center" id="loading-utility-block" style="display: none; margin: 0 auto;font-size: 50px"></i>
                <p id="current-main-domain" style="display:none;"></p>

                <div class="edit-block" id="notification-edit-block" style="display: none">
                    <form id="edit-form">
                        <label for="utility-notification-name" class="required">Name</label>
                        <input type="text" id="utility-notification-name" name="notificationName" required="required" class="form-control">

                        <label for="utility-notification-title" class="required">Title</label>
                        <input type="text" id="utility-notification-title" name="notificationTitle" maxlength="50" required="required" class="form-control">

                        <label for="utility-notification-message" class="required">Message</label>
                        <input type="text" id="utility-notification-message" name="notificationMessage" maxlength="150" required="required" class="form-control">

                        <div class="form-group">
                            <label for="utility-notification-icon">Icon</label>
                            <div>
                                <input type="text" id="utility-notification-icon" name="notificationIcon" autocomplete="off" class="image-type-selector form-control picture-select-field">
                                <i class="utility-clear-input fa fa-times" id="utility-clear-icon-input"></i>
                                <img src="" id="utility-notification-icon-preview" style="width:50px;height:50px">
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="utility-notification-image">Image</label>
                            <div>
                                <input type="text" id="utility-notification-image" name="notificationImage" autocomplete="off" class="image-type-selector form-control picture-select-field">
                                <i class="utility-clear-input fa fa-times" id="utility-clear-image-input"></i>
                                <img src="" id="utility-notification-image-preview" style="width:50px;height:50px">
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="utility-notification-url" class="required">Launch url</label>
                            <input type="text" id="utility-notification-url" name="notificationUrl" required="required" class="form-control">
                        </div>
                        <input class="edit_form_id" name="notificationId" type="hidden">
                    </form>

                    <p id="page-location" style="display: none"></p>
                    <button class="btn btn-block btn-success mt-3" id="utility-edit-submit" type="submit">Edit</button>
                </div>

                <div class="preview-block" style="display: none">
                    <div class="text-center" id="notification-block">
                        <div class="win" id="windows-notification">
                            <img src="{{ asset('big_image.jpg') }}" alt="" class="notification-image" style="height: 240px;">
                            <div id="windows-main-block">
                                <img src="{{ asset('icon_image.jpg') }}" alt="" class="windows-notification-icon notification-icon">
                                <p class="notification-title notification-preview-title" style="color: white;"></p>
                                <p class="notification-message notification-preview-message windows-notification-text" style="color: #dfdfdf; margin-top: -8px;"></p>
                            </div>
                        </div>

                        <div class="android" id="android-notification">
                            <img src="{{ asset('icon_image.jpg') }}" alt="" class="android-notification-icon notification-icon">
                            <p class="notification-title notification-preview-title android-notification-title"></p>
                            <p class="notification-message notification-preview-message" style="color: dimgray; margin-top: -15px;"></p>
                            <img src="{{ asset('big_image.jpg') }}" alt="" class="notification-image" style="height: 240px;">
                        </div>
                    </div>

                    <div class="mt-3 text-center">
                        <h5 id="notification-type">Web, Windows</h5>
                        <button class="btn btn-primary switch-notification-preview">Switch preview</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>